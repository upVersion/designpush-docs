---
/**
 * Custom Header — empty on desktop, mobile menu toggle only on small screens.
 * The logo, search, and theme toggle all live in the sidebar instead.
 */
import MobileMenuToggle from 'virtual:starlight/components/MobileMenuToggle';
---

<div class="header sl-flex">
  <div class="sl-flex md:sl-hidden">
    <MobileMenuToggle />
  </div>
</div>

<style>
  .header {
    /* Floating hamburger — no bar, no height reservation */
    position: fixed;
    top: 1rem;
    right: 1rem;
    z-index: 10;
    height: auto;
    width: auto;
    padding: 0;
    background: transparent !important;
    border: none !important;
  }

  @media (min-width: 50rem) {
    .header {
      display: none;
    }
  }
</style>
